doctype html
html(lang="ru")
  head
    title Список пользователей
  body
    div.container
      h1.mt-4.mb-3 Список пользователей
      table.table.table-hover
        thead
          tr
            th ID
            th Username
            th Email
            th Actions
        tbody
          each user in users
            tr
              td= user.id
              td= user.username
              td= user.email
              td
                a.btn.btn-primary(href=`/users/${user.id}`) View